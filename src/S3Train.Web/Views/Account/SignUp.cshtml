
@model S3Train.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
    <h4 class="text-success">@ViewBag.Message</h4>
}

@using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container">
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <h5 class="modal-title">Sign up</h5>
        </div>
        <div class="modal-body">
            <form action="#" method="post">
                <div class="form-group">
                    <label class="col-md-2 control-label">Email</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Password</label>
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Confirm Password</label>
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Full Name</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Gender</label>
                    <div class="col-md-6">
                        &nbsp;&nbsp;&nbsp;&nbsp; Male @Html.RadioButtonFor(m => m.Gender, "Male", new { @checked = "checked" })
                        &nbsp;&nbsp;&nbsp;&nbsp; Female @Html.RadioButtonFor(m => m.Gender, "Female")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Address</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Phone Number</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Date of Birth</label>
                    <div class="col-md-6">
                        @Html.EditorFor(m => m.DateOfBirth, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger", @require = "" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" style="background-color:Highlight; color:white" value="Sign Up" />
                    </div>
                </div>
                @*<div class="sub-w3l">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="customControlAutosizing2">
                        <label class="custom-control-label" for="customControlAutosizing2">I Accept to the Terms & Conditions</label>
                    </div>
                </div>*@
                <div class="txt1 text-center p-t-54 p-b-20">
                    Or Sign Up With
                </div>

                <div class="flex-c-m">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



